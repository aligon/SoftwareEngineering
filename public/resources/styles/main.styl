html{ width: 100%; height: 100%; margin: 0; padding: 0; font-family: "Helvetica Neue", Helvetica, Arial, sans-serif}
body{ width: 100%; height: 100%; margin: 0; padding: 0}

.grid-container{
	width: 80%;
	height: 100%;
	margin-left: 20%;

	.grid{
		.gen-grid{
			margin-left: auto;
			margin-right: auto;
			position: relative;

			.cell{
				border: 1px solid black;
				position: absolute;

				&.active{
					background-color: blue;

					&.selected{
						-webkit-box-shadow: inset 0px 0px 10px 1px rgba(255, 255, 255, 1);
        				box-shadow: inset 0px 0px 10px 1px rgba(255, 255, 255, 1);
					}
				}

				&.selected{
					-webkit-box-shadow: inset 0px 0px 10px 1px rgba(0, 0, 0, 1);
        			box-shadow: inset 0px 0px 10px 1px rgba(0, 0, 0, 1);
				}
			}
		}
	}	
}

.controls-container{
	position: fixed;
	height: 80%;
	width: 400px
	top: 10%;

	&.collapsed{
		left: -400px;
	}

	.handle{
		position: absolute;
		height: 60px;
		width: 30px;
		right: -30px;
		top: 5px;
		background-color: red;
	}
}


